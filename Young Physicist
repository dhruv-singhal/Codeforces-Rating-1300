#include <stdio.h>
int main()
{
    int n,sum1=0,sum2=0,sum3=0,a,b,c,i;
    scanf("%d",&n);
    if(n>=1&&n<=100)
    {
        for(i=0;i<n;i++)
            {
                scanf("%d%d%d",&a,&b,&c);
                if(a>=-100&a<=100)
                sum1+=a;
                if(b>=-100&b<=100)
                sum2+=b;
                if(c>=-100&c<=100)
                sum3+=c;
    
            }
        if(sum1==0&&sum2==0&&sum3==0)
        printf("YES");
        else
        printf("NO");
    }
    
    return (0);
}
